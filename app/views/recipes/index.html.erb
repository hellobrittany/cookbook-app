<p>You have visited this page <%= @visit_count %> times.</p>

<div class="row">
	
	<% @recipes.each do |recipe| %>

		<div class="col-md-4">	
			<div class="thumbnail well">
				<h2><%= recipe.title %></h2>
				<h4><%= recipe.chef %></h4>
				<h3><%= recipe.ingredients %></h3>
				<h3><%= recipe.directions %></h3>
				<h3><%= recipe.prep_time %></h3>
				<br>	
			</div>
		</div>
	<% end %>	
</div>
